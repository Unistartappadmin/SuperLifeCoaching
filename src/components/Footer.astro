            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 
                     4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 
                     14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 
                     6.86-8.55 11.54L12 21.35z"/>
          </svg>
          by 
          <a href="https://unistart.app" target="_blank" rel="noopener noreferrer" class="text-gray-500 font-medium hover:text-[#D4AF37] transition-colors duration-200">
            Unistart
          </a>
        </p>

        <!-- Social Links (Optional) -->
        <div class="flex items-center gap-4 order-2 sm:order-3">
          <a 
            href="#" 
            class="w-8 h-8 rounded-full bg-gray-200 hover:bg-[#D4AF37] flex items-center justify-center transition-colors duration-200 group"
            aria-label="Follow us on social media"
          >
            <svg class="w-4 h-4 text-gray-600 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
          </a>

          <a 
            href="#" 
            class="w-8 h-8 rounded-full bg-gray-200 hover:bg-[#D4AF37] flex items-center justify-center transition-colors duration-200 group"
            aria-label="Follow us on Instagram"
          >
            <!-- Instagram icon -->
            <svg class="w-4 h-4 text-gray-600 group-hover:text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5A4.5 4.5 0 1 1 7.5 12 4.5 4.5 0 0 1 12 7.5zm0 2A2.5 2.5 0 1 0 14.5 12 2.5 2.5 0 0 0 12 9.5zM17.8 6.2a1 1 0 1 1-1.6 1.2 1 1 0 0 1 1.6-1.2z"/>
            </svg>
          </a>

          <a 
            href="#" 
            class="w-8 h-8 rounded-full bg-gray-200 hover:bg-[#D4AF37] flex items-center justify-center transition-colors duration-200 group"
            aria-label="Follow us on TikTok"
          >
            <!-- TikTok icon -->
            <svg class="w-4 h-4 text-gray-600 group-hover:text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12.5 3h2.1c.2 1.6 1.2 3 2.6 3.8 1 .6 2.1.8 3.2.9v2.1c-1.3 0-2.6-.3-3.8-.9-.7-.3-1.3-.8-2-1.3v6.9c0 3-2.4 5.5-5.5 5.5S4.5 17.5 4.5 14.5 6.9 9 10 9c.3 0 .6 0 .9.1v2.2c-.3-.1-.6-.1-.9-.1-1.8 0-3.2 1.4-3.2 3.3s1.4 3.3 3.2 3.3 3.2-1.4 3.2-3.3V3z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>