---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import BlogList from "../../../components/admin/BlogList";
---

<AdminLayout title="Blog Management | Admin Panel" activePage="blog">
  <div class="space-y-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Blog Management</h1>
        <p class="text-sm text-gray-600 mt-2">Create, publish, and manage your blog content.</p>
      </div>
      <a
        href="/admin/blog/new"
        class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-[#D4AF37] text-sm font-semibold text-white hover:bg-[#0A0A0A] transition-colors"
      >
        New Post
      </a>
    </div>

    <BlogList client:load />
  </div>
</AdminLayout>
