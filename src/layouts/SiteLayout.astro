---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "SuperLife Coaching", description = "Premium life coaching experiences tailored to your transformation." } =
  Astro.props as Props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-ink overflow-x-hidden">
    <Header client:load />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
